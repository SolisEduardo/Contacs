<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.activity.user.UserActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/yellow">

            <!-- TextView en el Toolbar -->
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Título del Toolbar"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="18sp" />
        </androidx.appcompat.widget.Toolbar>

        <!-- FrameLayout debajo del Toolbar -->
        <FrameLayout
            android:id="@+id/frameUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Puedes colocar fragmentos, vistas o contenido adicional en el FrameLayout aquí -->

        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>